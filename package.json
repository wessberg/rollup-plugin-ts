	"engines": {
		"node": ">=16.15.1",
		"npm": ">=7.0.0",
		"yarn": ">=1.13",
		"pnpm": ">=3.2.0"
	},
	"prettier": "@wessberg/prettier-config",
	"ava": {
		"files": [
			"test/**/*.test.ts"
		],
		"verbose": true,
		"timeout": "400s",
		"nonSemVerExperiments": {
			"configurableModuleFormat": true
		},
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		],
		"environmentVariables": {
			"FORCE_COLOR": "3"
		}
	}
}
