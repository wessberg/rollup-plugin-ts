		"@babel/runtime": "7.20.13",
		"@babel/preset-env": "7.20.2",
		"@babel/preset-typescript": "7.18.6",
		"@babel/plugin-transform-runtime": "7.19.6",
		"@swc/core": "1.3.27",
		"@swc/helpers": "0.4.14",
		"ava": "3.15.0",
		"babel-preset-minify": "^0.5.2",
		"eslint": "^8.32.0",
